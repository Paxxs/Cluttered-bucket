{
    "version": "6.925",
    "description": "Office Tool is a tool to deploy and activate Office/Visio/Project. By using Office Tool, you can quickly deploy Office in Win7/8/10.",
    "homepage": "https://otp.landian.vip/en-us",
    "url": "https://server.lancdn.com/otp/update/OTPUpdater.exe",
    "hash": "7d28463c946e427b7add5cdd1b4f48460aca7fbe51cc309e63c6ad188c720fb3",
    "installer": {
        "script": [
            "$currentPrincipal = New-Object Security.Principal.WindowsPrincipal([Security.Principal.WindowsIdentity]::GetCurrent())",
            "$isAdmin = $currentPrincipal.IsInRole([Security.Principal.WindowsBuiltInRole]::Administrator)",
            "if (!$isAdmin){",
            "    Write-Host \":( please use 'sudo cmd' reinstall\" -ForegroundColor Red",
            "    throw \"Insufficient permissions\"",
            "}",
            "$a = Start-Process \"$dir\\OTPUpdater.exe\" -Args /fix -WorkingDirectory $dir -PassThru | Get-Process",
            "while(!$a.HasExited){Start-Sleep(1);}",
            "Get-Process 'Office Tool Plus' | Stop-Process"
        ]
    },
    "shortcuts": [
        [
            "Office Tool Plus.exe",
            "Office Tool Plus"
        ]
    ],
    "checkver": {
        "url": "https://server.lancdn.com/otp/config/Update.config",
        "re": "OTPVersion=\"(?<version>[\\d.]+)[\\S\\s]+k>(?<url>.*)</File[\\S\\s]+Hash>(?<hash>\\w+)"
    },
    "autoupdate": {
        "url": "$matchUrl",
        "hash": "$matchHash /sha256"
    }
}
