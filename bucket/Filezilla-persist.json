{
    "version": "3.44.0",
    "description": "Fast and reliable cross-platform FTP, FTPS and SFTP client with lots of useful features and an intuitive graphical user interface.",
    "homepage": "https://filezilla-project.org/",
    "license": "GPL-2.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.44.0_win64.zip",
            "hash": "sha512:18bb39ddf8a57c84d10183a4cb58539ce00408cdf320fd4586ed55db27312ca5eb5c24a94b8315916a5c62f01af412ff53af0aa3add31ab99f17b15c346b9621"
        },
        "32bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.44.0_win32.zip",
            "hash": "sha512:af227f3dc7e5881b5db5451a7a39c60ecce1ae6cc4f97ed0cf1303d010840d6760328d047ff589fe68dd5bdef8af607974ebf4ae50e4031a6cf5db1b1f8ab0b0"
        }
    },
    "extract_dir": "FileZilla-3.44.0",
    "pre_install": [
        "$file = 'fzdefaults.xml'",
        "if (-not (Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    #核心配置不存在，创建",
        "    $xml = [xml](Get-Content \"$dir\\docs\\fzdefaults.xml.example\")",
        "    $setting = $xml.FileZilla3.Settings.Setting",
        "    $configLocation = $setting |",
        "    Where-Object {",
        "        $_.Name -match \"Config Location\"",
        "    }",
        "    $configLocation.'#text' = \"$dir/Config/\" -replace \"\\\\\",\"/\"",
        "",
        "    $cacheDirectory = $setting |",
        "    Where-Object {",
        "        $_.Name -match \"Cache directory\"",
        "    }",
        "    #$env:TEMP",
        "    $cacheDirectory.'#text' = \"$env:TEMP/filezillacache\" -replace \"\\\\\",\"/\"",
        "",
        "    $xml.Save(\"$dir\\fzdefaults.xml\")",
        "",
        "    #Copy-Item \"$dir\\docs\\fzdefaults.xml.example\" \"$dir\\fzdefaults.xml\"",
        "}"
    ],
    "bin": "filezilla.exe",
    "shortcuts": [
        [
            "filezilla.exe",
            "FileZilla"
        ]
    ],
    "persist": [
        "fzdefaults.xml",
        "Config"
    ],
    "checkver": {
        "url": "https://filezilla-project.org/download.php?show_all=1",
        "re": "The latest stable version of FileZilla Client is ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win64.zip"
            },
            "32bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win32.zip"
            }
        },
        "hash": {
            "url": "$baseurl/FileZilla_$version.sha512"
        },
        "extract_dir": "FileZilla-$version"
    }
}
