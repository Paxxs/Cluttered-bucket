{
    "version": "2.8.0.111",
    "description": "Available for all kinds of platforms; enjoy group chat; support voice/photo/video and text messages.",
    "homepage": "https://www.wechat.com/en",
    "url": "https://drive.4me.cc/apt-cdn/WeChat/2.8.0.111/WeChat.7z",
    "hash": "38C5F84940A1E014DEC8CD9664B4355350FBF2B196569E3923326965AC94659F",
    "persist": "WeChatData",
    "pre_install":[
        "$file = 'WeChatData'",
        "if (!(Test-Path \"$persist_dir\\$file\")) {",
        "   Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "   New-Item -Path $dir\\WeChatData -ItemType Directory",
        "}"
    ],
    "post_install":[
        "New-Item -Path $env:APPDATA\\Tencent\\WeChat -ItemType Junction -Value $dir\\WeChatData"
    ],
    "uninstaller": {
        "script": "Remove-Item $env:APPDATA\\Tencent\\WeChat -Force -Recurse"
    },
    "shortcuts": [
        [
            "WeChat.exe",
            "WeChat"
        ]
    ],
    "checkver":{
        "url": "https://www.nocmd.com/477.html",
        "regex": "v([\\d.]+)"
    }
}
